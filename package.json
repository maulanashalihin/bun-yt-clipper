{
  "name": "youtube-clipper-bun",
  "version": "1.0.0",
  "description": "YouTube Clipper - Bun Edition",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "bun run server.ts",
    "dev": "bun --watch server.ts",
    "build": "bun build server.ts --outdir dist --target bun",
    "compile": "bun build server.ts --compile --outfile youtube-clipper"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
